<h1>Records</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th>Type</th>
    <th></th>
  </tr>

  <% @records.each do |record| %>
    <tr>
      <td><%= record.name %></td>
      <td><%= record.content %></td>
      <td><%= record.dns_type.upcase %></td>
      <td><%= link_to 'Show', record_path(record) %></td>
    </tr> 
  <% end %> 
</table>