<h1>New Record</h1>

<%= form_with scope: :record, url: records_path, local: false do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :dns_type, "Type" %><br>
    <%= form.select :dns_type, Record.dns_types.keys.map { |key, value| [key.upcase, key] }, {}, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :content %><br>
    <%= form.text_field :content, class: "form-control" %>
  </div>
 
 
  <p>
    <%= form.submit class: "btn btn-primary" %>
  </p>
<% end %>