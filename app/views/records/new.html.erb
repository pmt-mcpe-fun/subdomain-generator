<h1>New Record</h1>

<%= form_with scope: :record, url: records_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    Type<br>
    <%= form.select :dns_type, Record.dns_types.keys.map { |key, value| [key.upcase, key] } %>
  </p>

   <p>
    <%= form.label :content %><br>
    <%= form.text_field :content %>
  </p>
 
 
  <p>
    <%= form.submit %>
  </p>
<% end %>